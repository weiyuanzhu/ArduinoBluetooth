<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BluetoothSettings">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List paired devices"
        android:id="@+id/button"

        android:layout_alignParentStart="true"
        android:onClick="searchPaired"/>

    <ListView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="connect"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="On"
        android:id="@+id/buttonRed"
        android:onClick="button"
        android:background="@drawable/red"
        android:layout_alignBottom="@+id/buttonGreen"
        android:layout_alignStart="@+id/picker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button5"
        android:onClick="send"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/editText" />

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/buttonBlue"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/listView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="On"
        android:id="@+id/buttonBlue"
        android:background="@drawable/blue"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonGreen"
        android:onClick="button"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="On"
        android:id="@+id/buttonGreen"
        android:background="@drawable/green"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonRed"
        android:onClick="button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonGreen" />

</RelativeLayout>
