<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BluetoothSettings">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search paired"
        android:id="@+id/button"

        android:layout_alignParentStart="true"
        android:onClick="searchPaired"/>

    <ListView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="connect"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Turn on"
        android:id="@+id/button4"
        android:onClick="red"
        android:background="@drawable/red"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignStart="@+id/picker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button5"
        android:onClick="send"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/editText" />

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/listView"
        android:layout_marginStart="70dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Turn on"
        android:id="@+id/button2"
        android:background="@drawable/blue"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button6"
        android:onClick="blue"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Turn on"
        android:id="@+id/button6"
        android:background="@drawable/green"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button4"
        android:onClick="green"/>

</RelativeLayout>
